<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if(orders.length>0){%>
                    <ul class="order_cont">
                        <% orders.forEach(order=>{%>
                            <li>
                                <h1>Order - # <%= order._id %>
                                </h1>
                                <ul class="cont">
                                    <% order.products.forEach(item=>{ %>
                                        <li>
                                            <%= item.product.title%> (<%= item.quantity%>)
                                        </li>
                                        <% }) %>
                                </ul>
                            </li>
                            <%})%>
                    </ul>
                    <%}else{%>
                        <h1>Nothing there!</h1>
                        <%}%>
            </main>
            <%- include('../includes/end.ejs') %>